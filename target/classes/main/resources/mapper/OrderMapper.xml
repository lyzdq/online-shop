<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.OrderMapper">
    
    <resultMap id="BaseResultMap" type="Order">
        <id column="id" property="id"/>
        <result column="order_no" property="orderNo"/>
        <result column="user_id" property="userId"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="status" property="status"/>
        <result column="address" property="address"/>
        <result column="phone" property="phone"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM `order` WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <select id="findByOrderNo" resultMap="BaseResultMap">
        SELECT * FROM `order` WHERE order_no = #{orderNo}
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM `order` WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM `order` ORDER BY create_time DESC
    </select>

    <select id="findByStatus" resultMap="BaseResultMap">
        SELECT * FROM `order` WHERE status = #{status} ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `order` (order_no, user_id, total_amount, status, address, phone)
        VALUES (#{orderNo}, #{userId}, #{totalAmount}, #{status}, #{address}, #{phone})
    </insert>

    <update id="update" parameterType="Order">
        UPDATE `order`
        <set>
            <if test="status != null">status = #{status},</if>
            <if test="address != null">address = #{address},</if>
            <if test="phone != null">phone = #{phone},</if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>





