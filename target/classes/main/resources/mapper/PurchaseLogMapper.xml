<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.PurchaseLogMapper">
    
    <resultMap id="BaseResultMap" type="PurchaseLog">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="order_id" property="orderId"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_price" property="productPrice"/>
        <result column="quantity" property="quantity"/>
        <result column="subtotal" property="subtotal"/>
        <result column="purchase_time" property="purchaseTime"/>
    </resultMap>

    <resultMap id="WithProductResultMap" type="PurchaseLog" extends="BaseResultMap">
        <association property="product" javaType="Product">
            <id column="p_id" property="id"/>
            <result column="p_name" property="name"/>
            <result column="p_image" property="image"/>
        </association>
        <association property="user" javaType="User">
            <id column="u_id" property="id"/>
            <result column="u_username" property="username"/>
            <result column="u_email" property="email"/>
        </association>
        <association property="order" javaType="Order">
            <id column="o_id" property="id"/>
            <result column="o_order_no" property="orderNo"/>
            <result column="o_status" property="status"/>
        </association>
    </resultMap>

    <insert id="insert" parameterType="PurchaseLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO purchase_log (user_id, order_id, product_id, product_name, product_price, quantity, subtotal)
        VALUES (#{userId}, #{orderId}, #{productId}, #{productName}, #{productPrice}, #{quantity}, #{subtotal})
    </insert>

    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT * FROM purchase_log 
        WHERE user_id = #{userId} 
        ORDER BY purchase_time DESC
    </select>

    <select id="findByOrderId" resultMap="BaseResultMap">
        SELECT * FROM purchase_log 
        WHERE order_id = #{orderId} 
        ORDER BY purchase_time DESC
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM purchase_log 
        ORDER BY purchase_time DESC
    </select>

    <select id="findByUserIdWithProduct" resultMap="WithProductResultMap">
        SELECT 
            pl.*,
            p.id as p_id,
            p.name as p_name,
            p.image as p_image,
            u.id as u_id,
            u.username as u_username,
            u.email as u_email,
            o.id as o_id,
            o.order_no as o_order_no,
            o.status as o_status
        FROM purchase_log pl
        LEFT JOIN product p ON pl.product_id = p.id
        LEFT JOIN user u ON pl.user_id = u.id
        LEFT JOIN `order` o ON pl.order_id = o.id
        WHERE pl.user_id = #{userId}
        ORDER BY pl.purchase_time DESC
    </select>
</mapper>

